<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
        >
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/stat_list_item_consumeTextview"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:padding="4dp"
              android:text="0.00"
            />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/stat_list_item_titleTextView"
              android:textStyle="bold"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:text="Loading Title"
            />
    <!--


              -->

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/stat_list_item_updatetimeTextView"
              android:layout_below="@id/stat_list_item_titleTextView"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:paddingTop="4dp"
              android:text="PendingUpdate"

            />
